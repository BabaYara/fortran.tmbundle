{
	// Fortran 77/90 -- chris@cjack.com. Feel free to modify, distribute, be happy. Share and enjoy.
	
	name = "Fortran";
	fileTypes = ( f, for, FOR, fpp, FPP, f77, f90, f95 );
//	foldingStartMarker = "(/\\*\\*|\\{\\s*$)";
//	foldingStopMarker = "(\\*\\*/|^\\s*\\})";
	increaseIndentPattern = "\\<(?i:(IF|DO))\\>";
	smartTypingPairs = (
	   ( "(", ")" ), ( "[", "]" ), ( "{", "}" ),
	   ( "\"", "\"" ), ( "'", "'" )
	);
	highlightPairs = (
	   ( "(", ")" ), ( "[", "]" ), ( "{", "}" )
	);
	foregroundColor = "#000000";
	backgroundColor = "#FFFFFF";
	patterns = (
		
		{ name = "FortranPunchcardStyleComment"; match = "(?s:(^C(.*)$))"; foregroundColor = "#236B8E"; },
		
		{
			name = "NonExecutable statements";
			match = "\\<(?i:(BLOCK\sDATA|CHARACTER|COMMON|DATA|DIMENSION|DOUBLE\\sPRECISION|ENTRY|EQUIVALENCE|EXTERNAL|FORMAT|FUNCTION|IMPLICIT|INTEGER|INTRINSIC|LOGICAL|PARAMETER|PROGRAM|REAL|SAVE|SUBROUTINE))\\>";
			fontStyle = ( bold );
			foregroundColor = "blue";
		},
		{
			name = "Executable statements";
			match = "\\<(?i:(ASSIGN|BACKSPACE|CALL|CLOSE|CONTINUE|DO|END|ENDFILE|GO\\sTO|IF|THEN|ELSE|INQUIRE|OPEN|PRINT|READ|RETURN|REWIND|STOP|WRITE))\\>";
			fontStyle = ( bold );
			foregroundColor = "blue";
		},

		{
			name = "Operators";
			match = "\\<(?i:(\\.GT\\.|\\.GE\\.|\\.LT\\.|\\.LE\\.|\\.EQ\\.|\\.NE\\.|\\.NOT\\.|\\.AND\\.|\\.OR\\.|\\.EQV\\.|\\.NEQV\\.))\\>";
			fontStyle = ( bold );
			foregroundColor = "blue";
		},
		
		{ name = "Numeric Constant"; match = "\\<((0(x|X)[0-9a-fA-F]*)|(([0-9]+\\.?[0-9]*)|(\\.[0-9]+))((e|E)(\\+|-)?[0-9]+)?)(L|l|UL|ul|u|U|F|f|ll|LL|ull|ULL)?\\>"; foregroundColor = "#0000CD"; },
		{ name = "String"; begin = "'"; end = "'"; swallow = "\\\\."; foregroundColor = "#8B2252"; },
		
		{ name = "FortranModernComment"; match = "^!(.*)$"; foregroundColor = "#236B8E"; },
		
		{
			name = "Fortran90 statements";
			match = "\\<(?i:(MODULE|USE|PRIVATE|PUBLIC|RECURSIVE|INTENT|OPTIONAL))\\>";
			fontStyle = ( bold );
			foregroundColor = "blue";
		},

	);
}
